<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Wiz Todo List</title>
    <style>
        body { font-family: sans-serif; background-color: #f4f4f4; color: #333; }
        .box { max-width: 500px; margin: 50px auto; background: white; border-radius: 5px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
        h1 { background-color: #5E17EB; color: white; padding: 20px; text-align: center; margin: 0; border-top-left-radius: 5px; border-top-right-radius: 5px; }
        .item { display: flex; align-items: center; padding: 15px; border-bottom: 1px solid #f0f0f0; }
        input[type="checkbox"] { margin-right: 15px; }
        p { margin: 0; font-size: 18px; }
        form { display: flex; padding: 20px; }
        input[type="text"] { flex-grow: 1; border: none; border-bottom: 2px solid #5E17EB; padding: 10px; font-size: 16px; }
        button { background-color: #5E17EB; color: white; border: none; padding: 10px 15px; font-size: 24px; border-radius: 50%; margin-left: 10px; cursor: pointer; }
        .footer { padding: 20px; font-size: 12px; color: #aaa; text-align: center; }
    </style>
</head>
<body>
    <div class="box">
        <h1>Wiz Technical Exercise</h1>
        <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>
        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>
    <div class="footer">
        <p>Content of wizexercise.txt: <%= exerciseFileContent %></p>
    </div>
</body>
</html>
